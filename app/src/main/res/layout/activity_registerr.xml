<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad_ground"
        tools:context=".registerr">


        <TextView
            android:id="@+id/rigester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Rigester"
            android:textColor="@color/white"
            android:textSize="55dp"
            android:textStyle="bold|italic" />


        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rigester"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/coustom_shape"
            android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif-thin"
            android:hint="First Name"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstname"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/coustom_shape"
            android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif-thin"
            android:hint="Last Name "
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastname"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/coustom_shape"
            android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif-thin"
            android:hint="Username"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/coustom_shape"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif-thin"
            android:hint="Password"
            android:padding="20dp"
            android:password="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/coustom_shape"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif-thin"
            android:hint="Confirm Password"
            android:padding="20dp"
            android:password="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_password"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/coustom_shape"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif-thin"
            android:hint="Email Address"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login"
            android:layout_width="109dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/Email"
            android:layout_marginStart="13dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="230dp"
            android:background="@drawable/shapebutton"
            app:backgroundTint="#99FF99"            android:text="login" />

        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Email"
            android:layout_marginStart="244dp"
            android:layout_marginTop="50dp"

            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/shapebutton"
            app:backgroundTint="#99FF99"            android:text="Submit"
            android:textColorHint="#652222"
            app:strokeColor="#4A1919" />

    </RelativeLayout>

</ScrollView>
